generator client {
  provider = "prisma-client-js"
}
generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  telegram_id Int  @unique
  username  String?
  first_name String?
  last_name  String?
  /// [UserContext]
  context   Json @default("{}")
  position  Position[] @default([MENU])
  words     Word[]
  messages   Message[]
  createdAt DateTime @default(now())
}

enum Position{
  MENU
  VOCABULARY
  ADD_WORD
  REMOVE_WORD
}

model Word {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id    Int
  word      String
  meaning   String?
  createdAt DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  telegram_id String
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id   Int
  /// [Message]
  content   Json
  createdAt DateTime @default(now())
}